<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.passengerProfileUi.GeneralInfo">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/generalInfo_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/input_box"
            android:fontFamily="@font/sf_ui_display"
            android:hint="Enter your name"
            android:textColorHint="@color/bGo_inputBoxColor"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxColor"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/generalInfo_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/input_box"
            android:fontFamily="@font/sf_ui_display"
            android:hint="Enter the email address"
            android:textColorHint="@color/bGo_inputBoxColor"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxColor"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:inputType="number"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/generalInfo_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/input_box"
            android:fontFamily="@font/sf_ui_display"
            android:hint="Enter the phone number"
            android:textColorHint="@color/bGo_inputBoxColor"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxColor"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:hint="Select Gender"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            >

            <AutoCompleteTextView
                android:editable="false"
                android:inputType="none"
                android:id="@+id/filled_exposed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:inputType="text"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/generalInfo_bloodGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/input_box"
            android:fontFamily="@font/sf_ui_display"
            android:hint="Enter your blood group"
            android:textColorHint="@color/bGo_inputBoxColor"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxColor"
            android:textSize="@dimen/_12ssp"/>
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:hint="Select Occupation"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            >

            <AutoCompleteTextView
                android:editable="false"
                android:inputType="none"
                android:id="@+id/occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/sf_ui_display_medium"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/generalInfo_locationMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/sf_ui_display_medium"
                android:text="From map"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>
        <EditText
            android:layout_marginBottom="@dimen/_10sdp"
            android:inputType="text"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/generalInfo_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/input_box"
            android:fontFamily="@font/sf_ui_display"
            android:hint="Enter the valid address"
            android:textColorHint="@color/bGo_inputBoxColor"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxColor"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

</ScrollView>